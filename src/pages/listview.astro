import paper from "../assets/images/paper.svg";
---

<MainLayout title="Rejser">
  <section class="relative w-full h-auto">
    <!-- Container for the image and overlay -->
    <div class="relative w-full">
      <!-- Dark overlay -->
      <div class="absolute inset-0 bg-neutral-950 w-full md:h-[800px] h-[450px] bg-opacity-30 z-[30]"></div>
      <!-- Image -->
      <img src="/listview.webp" alt="en gruppe af mennesker" class="object-cover w-full md:h-[800px] h-[450px] z-[10]" />
    </div>

    <!-- Text content over the image (no centering) -->
    <div class="absolute w-full px-[20px] md:pl-2xl top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 z-[40]">
      <h4 class="md:pt-xs pt-xl text-neutral-50">Priser &</h4>
      <h1 class="display text-neutral-50">REJSER</h1>
      <p class="max-w-3xl pt-xs text-neutral-50">
        Få et klart overblik over vores højskoleophold i udlandet. Her finder du information om forløb, datoer, priser og alt, hvad du behøver at
        vide. På opholdssiderne kan du læse mere om programmet, adventure-aktiviteter, fag, rejsebreve og hvad der er inkluderet.
      </p>
      <div class="flex flex-column pt-sm gap-s md:flex md:pt-s">
        <a href="#contact">
          <Button variant="secondary" size="sm:xsmall md:medium">Kontakt</Button>
        </a>
        <a href="/infomoede">
          <Button variant="primary" size="sm:xsmall md:medium">Infomøde</Button>
        </a>
      </div>
    </div>
  </section>
  <section class="py-12 px-6 flex justify-center items-center">
    <div class="container mx-auto flex flex-wrap justify-center gap-sm md:pt-xs pt-xxxs">
      {
        cards.map((card) => (
          <CardListeview
            image={card.image}
            label={card.label}
            title={card.title}
            description={card.description}
            duration={card.duration}
            nextTrip={card.nextTrip}
            price={card.price}
            include={card.include}
            buttonText={card.buttonText}
            extralabel={card.position % 3 === 0 ? "Få pladser!" : null}
          />
        ))
      }
    </div>
  </section>
  <section class="flex flex-col px-s mx-auto lg:max-w-7xl md:p-large md:pt-[40px]">
    <h1 class="text-h2-mobile font-display text-neutral-950 md:text-h1-desktop">Infomøde</h1>
    <p class="py-xxs lg:w-1/2">
      Hvis du drømmer om et fantastisk rejseeventyr med masser af eventyr, vilde naturoplevelser og spændende kulturmøder så smut forbi et af vores
      hyggelige infomøder i København eller Aarhus – eller mød os på et online infomøde.
    </p>
    <div class="pb-sm"><Button variant="primary" size="medium">Tilmeld dig infomødet</Button></div>

    <section class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-md md:items-center pb-lg">
      <Cardinfomoede
        url="/infomoede"
        cardimage="/copenhagen.webp"
        sted="København"
        cardimagealt="København infomøde"
        lokale="Studenthuset, Købmagergade 52-1150"
        dato="16. Januar. 2025"
        tidspunkt="Kl.17-19"
      />
      <Cardinfomoede
        url="/infomoede"
        cardimage="/aarhus.webp"
        sted="Aarhus"
        cardimagealt="Aarhus infomøde"
        lokale="LYN fabrikken, Vestergade 49B – 8000"
        dato="14. Januar. 2025"
        tidspunkt="Kl.17-19"
      />
      <Cardinfomoede
        url="/infomoede"
        cardimage="/online.webp"
        sted="Online infomøde"
        cardimagealt="online infomøde"
        lokale="Online infomøde"
        dato="13. Januar. 2025"
        tidspunkt="Kl.17-19"
      />
    </section>
  </section>

  <section class="max-w-7xl mx-auto p-s">
    <section class="py-12 md:py-md pt-sm flex justify-center items-center">
      <div class="grid md:grid-cols-2 grid-cols-1 gap-5 md:pb-lg pb-sm">
        <div class="bg-neutral-100 p-8 rounded-[5px] flex items-start">
          <Image src={money} alt="money" width={50} height={50} class="mr-6" />
          <div>
            <h2 class="text-xl font-bold mb-2">HØJSKOLE-PRISER</h2>
            <p>
              Vi har samlet vores højskoleophold og rejser her for at give dig et godt overblik. På destinationssiderne kan du læse om
              adventure-aktiviteter, program, fag, transport, friuger, lommepenge og meget mere.
            </p>
          </div>
        </div>
        <div class="bg-neutral-100 p-8 rounded-[5px] flex items-start">
          <Image src={moneybag} alt="moneybag" width={50} height={50} class="mr-6" />
          <div>
            <h2 class="text-xl font-bold mb-2">TILSKUD TIL HØJSKOLEOPHOLD</h2>
            <p>
              Tidligere elever har ikke fået tilskud til vores højskoleophold, men du kan kontakte din kommune for muligheder. Mange sparer op gennem
              arbejde inden opholdet.
            </p>
          </div>
        </div>
        <div class="bg-neutral-100 p-8 rounded-[5px] flex items-start">
          <Image src={moneymanager} alt="money manager" width={50} height={50} class="mr-6" />
          <div>
            <h2 class="text-xl font-bold mb-2">HVAD KOSTER ET HØJSKOLEOPHOLD?</h2>
            <p>
              Priserne varierer afhængigt af opholdets længde, destinationer, aktiviteter, transport og indkvartering. Indkvartering i friuger er ikke
              inkluderet, da eleverne ofte rejser ud på egne eventyr i denne periode.
            </p>
          </div>
        </div>
        <div class="bg-neutral-100 p-8 rounded-[5px] flex items-start">
          <Image src={paper} alt="paper" width={40} height={40} class="mr-6" />
          <div>
            <h2 class="text-xl font-bold mb-2">LEGATER TIL HØJSKOLE</h2>
            <p>
              Der findes også legater til højskoleophold, som du kan finde på <a href="#" target="_blank" class="underline">legatmidler.dk </a><span
                class="italic text-gray-950">(ikke tilgængelig)</span
              > og <a href="https://www.legatbogen.dk/" target="_blank" class="underline">legatbogen.dk</a> . Begge sider giver et godt overblik, og nogle
              højskoler tilbyder også egne legater, så det kan være en idé at undersøge dem.
            </p>
          </div>
        </div>
      </div>
    </section>
  </section>
</MainLayout>

<style>
  html {
    scroll-behavior: smooth;
  }
</style>
