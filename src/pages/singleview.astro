        <!------------------------------- Accordion - Mobil ------------------------------->
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                const buttons = document.querySelectorAll(".question-btn");
                const activeClass = "bg-orange-600";

                buttons.forEach((button) => {
                    button.addEventListener("click", function () {
                        const targetId = this.getAttribute("data-toggle");
                        const target = document.getElementById(targetId);
                        const isExpanded = target.classList.contains("hidden");

                        // Close all other accordions
                        buttons.forEach((btn) => {
                            if (btn !== this) {
                                const otherTargetId = btn.getAttribute("data-toggle");
                                const otherTarget = document.getElementById(otherTargetId);
                                otherTarget.classList.add("hidden");
                                btn.classList.remove(activeClass);
                                btn.querySelector("svg").classList.remove("rotate-180");
                            }
                        });

                        if (isExpanded) {
                            target.classList.remove("hidden");
                            this.classList.add(activeClass);
                            this.querySelector("svg").classList.add("rotate-180");
                        } else {
                            target.classList.add("hidden");
                            this.classList.remove(activeClass);
                            this.querySelector("svg").classList.remove("rotate-180");
                        }
                    });
                });
            });
        </script>

        <!------------------------------- Tabbed interface - Desktop ------------------------------->
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                const tabs = document.querySelectorAll("[data-tab-target]");
                const activeClass = "bg-orange-600 hover:bg-orange-700";

                // Select first tab by default
                tabs[0].classList.add(...activeClass.split(" "));
                document.querySelector("#tab1").classList.remove("hidden");

                tabs.forEach((tab) => {
                    tab.addEventListener("click", () => {
                        const targetContent = document.querySelector(tab.dataset.tabTarget);

                        document.querySelectorAll(".tab-content").forEach((content) => content.classList.add("hidden"));
                        targetContent.classList.remove("hidden");

                        // Remove active class from all tabs except the card section
                        document.querySelectorAll(".bg-neutral-950").forEach((activeTab) => activeTab.classList.remove(...activeClass.split(" ")));

                        // Add active class to clicked tab
                        tab.classList.add(...activeClass.split(" "));
                    });
                });
            });
        </script>
