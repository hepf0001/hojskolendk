---
const { url = "#", cardimage = "", cardimagealt = "", sted = "", lokale = "", tidspunkt = "", dato = "", dato2 = "", tidspunkt2 = "" } = Astro.props;
import { Image } from "astro:assets";
import ikon_pin from "../assets/images/stedpin.svg";
import ikon_calendar from "../assets/images/datocalendar.svg";
import ikon_uret from "../assets/images/uret1.svg";
---

<article class="card @container">
  <a href={url} class="flex flex-col justify-between h-full">
    <header class="daseholdheader relative aspect-[16/9]">
      <div class="relative">
        <div class="absolute inset-0 rounded-sm bg-neutral-950 w-full bg-opacity-30 z-10"></div>
        <img src={cardimage} alt={cardimagealt} class="w-full object-cover h-auto rounded-t-sm bg-neutral-950 bg-opacity-30 z-10" />
        <div class="absolute bottom-xxs flex items-center left-[0] z-20 text-neutral-50 pl-xs text-h2-mobile font-display font-bold">{sted}</div>
      </div>
    </header>
    <section class="bg-neutral-100 rounded-b-sm pb-xs md:pb-xs py-xxxs h-[140px] md:h-[160px] lg:h-[120px] lg:grid lg:items-center lg:pt-xxs lg:justify-between">
      <div class="venstre grow font-medium">
        <div class="grid grid-cols-[auto,1fr] items-baseline gap-[5px] text-p-mobile px-xs pt-xxs">
          <span><Image src={ikon_pin} alt="pin ikon" class="w-xs flex-shrink-0 object-cover md:col-start-1" /> </span>
          <span class="text-neutral-950 font-lato col-start-2">{lokale}</span>
        </div>
      </div>
      <div class="hÃ¸jre grow font-medium flex flex-col items-baseline justify-center lg:grid lg:grid-cols-[auto,1fr]">
        <div class="flex gap-xxs text-p-mobile items-baseline pl-xs pt-xxs lg:col-start-1">
          <span><Image src={ikon_calendar} alt="calendar ikon" class="w-xs object-cover" /> </span>
          <span class="text-neutral-950 font-lato">{dato}</span>
        </div>
        <div class="flex gap-xxs text-p-mobile items-baseline px-xs pt-xxs lg:pl-s">
          <span><Image src={ikon_uret} alt="uret ikon" class="w-xs object-cover" /> </span>
          <span class="text-neutral-950 font-lato">{tidspunkt}</span>
        </div>
      </div>
    </section>
  </a>
</article>
